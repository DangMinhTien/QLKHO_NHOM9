@page
@model QLKHO.Areas.Admin.Pages.Roles.IndexModel
@{
    var i = 1;
}
<h2>Danh sách các Role</h2>
<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>
<div>
    <a class="btn btn-primary mb-2" asp-page="./Create">Tạo quyền</a>
</div>
<div class="overflow-auto">
    <table style="min-width:600px" class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã quyền</th>
                <th>Tên quyền</th>
                <th>Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.roles)
            {
                <tr>
                    <td>
                        @i
                        @{i++;}
                    </td>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td class="d-flex justify-content-around">
                        <a class="btn btn-success" asp-page="./Edit" asp-route-roleid="@role.Id">Chỉnh sửa</a> 
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-roleid="@role.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
